# ============================================
# SERVER CONFIGURATION
# ============================================
PORT=3000
NODE_ENV=development

# ============================================
# DATABASE CONFIGURATION
# ============================================
# MongoDB Atlas connection string
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/expense-tracker?retryWrites=true&w=majority

# ============================================
# AUTHENTICATION CONFIGURATION
# ============================================
# Secret key for JWT token generation (use a strong random string)
JWT_SECRET=your_jwt_secret_here_change_this_in_production

# Frontend URL for password reset links
FRONTEND_URL=http://localhost:3000

# ============================================
# FIREBASE CONFIGURATION
# ============================================
# Firebase Storage bucket name (e.g., your-project.appspot.com)
FIREBASE_STORAGE_BUCKET=your-project.appspot.com

# Firebase service account credentials (JSON string or path to JSON file)
# For production: Use the full JSON string as environment variable
# For development: Can use path to firebase-service-account.json file
# Example JSON string format (minified):
# FIREBASE_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"your-project","private_key_id":"...","private_key":"-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n","client_email":"...","client_id":"...","auth_uri":"...","token_uri":"...","auth_provider_x509_cert_url":"...","client_x509_cert_url":"..."}
FIREBASE_SERVICE_ACCOUNT_KEY=

# ============================================
# PAYMENT CONFIGURATION (RAZORPAY)
# ============================================
# Razorpay API credentials for premium payments
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# Premium membership price in smallest currency unit (e.g., paise for INR)
PREMIUM_PRICE=50000

# ============================================
# EMAIL CONFIGURATION (SMTP)
# ============================================
# SMTP server configuration for sending emails (password reset, notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
SMTP_FROM=your_email@gmail.com

# Alternative: Sendinblue/Brevo SMTP (if using instead of Gmail)
# SENDINBLUE_USER=your_sendinblue_user
# SENDINBLUE_PASS=your_sendinblue_pass

# ============================================
# SECURITY CONFIGURATION
# ============================================
# Allowed origins for CORS (comma-separated list)
# Development: http://localhost:5173,http://localhost:3000
# Production: https://yourdomain.com
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# ============================================
# OPTIONAL CONFIGURATION
# ============================================
# Sentry DSN for error tracking (optional)
# SENTRY_DSN=

# Seed database with sample data on startup (set to 'true' for demo/development)
# SEED=false

# Log level (error, warn, info, debug)
LOG_LEVEL=info
